<body>
  <h1>users index</h1>
      <div class="col-lg-8">
        <table class="table table-striped">
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
          <% @user.each do |user| %>
            <tr>
              <td><%= link_to attachment_image_tag(user, :profile_image, :fill, 30, 30, format: 'jpeg'),user_path(user.id) %></td><!-- !!user.showへリンクしたい！！bookmodelに紐付けたuserのprofile_imageを表示します-->
              <td><%= user.name %></td>
            </tr>
          <% end %>
        </table>
      </div>

