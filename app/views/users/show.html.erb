  <!--ユーザーマイページのHTML-->

  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= render'info', user: @user %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to attachment_image_tag(@user, :profile_image, size: "40x40", format: 'jpeg',fallback: "no_image.jpg"),user_path(@user.id) %></td><!-- !!user.showへリンクしたい！！bookmodelに紐付けたuserのprofile_imageを表示します-->
              <td><%= link_to book.title,book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><%= book.book_comments.count %>件コメント</h2></td>
            </tr>
          <% end %>
          <% paginate @books %>
        </table>
      </div>
    </div>
  </div>

