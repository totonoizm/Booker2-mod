  <!--ユーザーマイページのHTML-->

<body>
  <h1>User Show</h1>
      <div class="col-lg-8">
        <table class="table table-striped">
          <tr>

            <th>name.image</th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="4"></th>
          </tr>

              <td><%= @user.name %></td>   <!--テキストのみの表示の仕方を考える--??-->
              <td><%= @user.introduction %></td>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg' %></td>



          <% @books.each do |book| %>
            <tr>

              <td><%= book.title %></td>   <!--テキストのみの表示の仕方を考える--??-->
              <td><%= book.body %></td>
              <td><%= link_to "Show", book_path(book.id) %></td>
              <td><%= link_to "Edit", edit_book_path(book) %></td>
              <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
          <% end %>
          <% paginate @books %>
        </table>
      </div>
    </div>
  </div>

