 <!--サイドバー部分 aplication.htmlでrender使って呼び出し-->

    <% if @book.errors.any? %>
    <div class="alert">
        <ul>
        <%= @book.errors.count %>errors prohibited this book from being saved
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
    </div>
    <% end %>
 <h2>UserInfo</h2>
 <% if user_signed_in? %>
  <%= attachment_image_tag current_user, :profile_image, size: "100x100", format: 'jpeg',fallback: "no_image.jpg" %><!-- !!user.showへリンクしたい！！bookmodelに紐付けたuserのprofile_imageを表示します-->
   <table class="table">
     <tr></tr>
     <tr>
       <th>name</th>
       <th><%= current_user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= current_user.introduction %></th>
     </tr>
   </table>
   <p><%= link_to " ", edit_user_path(current_user), class: "btn btn-default btn-block glyphicon glyphicon-wrench" %></p>

 <!--通常はログインユーザー情報、usershowの時のみユーザー情報を表示-->
  <h2>New book</h2>

          <div>
            <%= form_with model:book, local:true do |f| %>
              <div>
                <p><strong>Title</strong></p>
                <%= f.text_field :title, size: "49%" %>
              </div>
              <div>
                <p><strong>Opinion</strong></p>
                <%= f.text_area :body, size: "48%" %>
              </div>
              <div>
                <%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
          </div>

 <% end %>