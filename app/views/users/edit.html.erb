<div class="container">
  <div class="row">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
      </div>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field">
        <%= f.label :image %>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="field">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
      </div>
      <div class="actions">
      <%= f.submit "Update User", class:"btn btn-default active" %>
      </div>
    <% end %>
  </div>
</div>
