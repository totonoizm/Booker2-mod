<body>
  <h1>Books index</h1>
      <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <%= render'books/sidebar' %>
      </div>

      <div class="col-lg-8">
        <table class="table table-striped">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to attachment_image_tag(book.user, :profile_image, size: "40x40", format: 'jpeg',fallback: "no_image.jpg"),user_path(book.id) %></td><!-- !!user.showへリンクしたい！！bookmodelに紐付けたuserのprofile_imageを表示します-->
              <td><%= link_to book.title,book_path(book.id) %></td>   <!--テキストのみの表示の仕方を考える--??-->
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </table>
      </div>

