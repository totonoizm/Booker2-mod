  <!--投稿した本の詳細ページ-->
  <h1>Booksdetail</h1>
  <div class="container">
    <div class="row">
      <div class="container">
        <div class="col-lg-4">
          <%= render'books/sidebar', book: @book %>
        </div>
        <div class="col-lg-8">
          <table class="table table-striped">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
              <tr>
                <td><%= attachment_image_tag @book.user, :profile_image, size: "40x40", format: 'jpeg',fallback: "no_image.jpg" %></td><!-- !!user.showへリンクしたい！！bookmodelに紐付けたuserのprofile_imageを表示します-->
                <td><%= link_to @book.title, book_path(@book.id) %>  <!--戻すところを考える！rake routes でurlがわかる--></td>
                <td><%= @book.body %></td>
              </tr>
          </table>
        </div>
    </div>
  </div>
<p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>|<!--@モデル名で現在参照しているデータにとぶ-->
    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  <% end %>
</p>
