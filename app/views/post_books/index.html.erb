<body>
  <h1>Books</h1>
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <h2>マイページと投稿領域作りたい</h2>
          <div>
            <%= form_with model:@post_book, local:true do |f| %>
              <div>
                <p>Title</p>
                <%= f.text_field :title %>
              </div>
              <div>
                <p>Body</p>
                <%= f.text_area :body %>
              </div>
              <div>
                <%= f.submit 'Create Book' %>
              </div>
            <% end %>
          </div>
      </div>
      <div class="col-lg-8">
        <table class="table table-striped">
          <tr>
            <th>Title</th>
            <th>body</th>
            <th colspan="3"></th>
          </tr>
          <% @post_books.each do |post_book| %>
            <tr>
              <td><%= post_book.title %></td>   <!--テキストのみの表示の仕方を考える--??-->
              <td><%= post_book.body %></td>
              <td><%= link_to "Show", post_book_path(post_book.id) %></td>
              <td><%= link_to "Edit", edit_post_book_path(post_book) %></td>
              <td><%= link_to "Destroy", post_book_path(post_book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>

